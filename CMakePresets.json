{
  "version": 3,
  "configurePresets": [
    {
      "name": "_base",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "Win32",
        "strategy": "external"
      }
    },
    {
      "name": "_clang_x86",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "$env{VSINSTALLDIR}",
        "rhs": ""
      },
      "generator": "Ninja",
      "toolchainFile": "cmake/clang-x86.cmake"
    },
    {
      "name": "_mingw_x86",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "cmake/i686-w64-mingw32.cmake"
    },
    {
      "name": "_msvc",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "_debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "_release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Debug (Clang)",
      "inherits": [
        "_base",
        "_clang_x86",
        "_debug"
      ]
    },
    {
      "name": "clang-release",
      "displayName": "Release (Clang)",
      "inherits": [
        "_base",
        "_clang_x86",
        "_release"
      ]
    },
    {
      "name": "mingw-debug",
      "displayName": "Debug (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x86",
        "_debug"
      ]
    },
    {
      "name": "mingw-release",
      "displayName": "Release (MinGW)",
      "inherits": [
        "_base",
        "_mingw_x86",
        "_release"
      ]
    },
    {
      "name": "msvc-debug",
      "displayName": "Debug (MSVC)",
      "inherits": [
        "_base",
        "_msvc",
        "_debug"
      ]
    },
    {
      "name": "msvc-release",
      "displayName": "Release (MSVC)",
      "inherits": [
        "_base",
        "_msvc",
        "_release"
      ]
    }
  ]
}
